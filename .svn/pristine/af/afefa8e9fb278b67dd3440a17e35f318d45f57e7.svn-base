import request from '@/utils/request'

/**
 * 获取轮播图列表
 * @param {参数} param
 */
export function getCarouselList(param) {
  return request.fetchPost('/v1/carousel/selectList', param)
}

/**
 * 获取轮播图详情
 * @param {参数} param
 */
export function getCarousel(param) {
  return request.fetchPost('/v1/carousel/select', param)
}

/**
 * 添加轮播图
 * @param {参数} param
 */
export function setCarousel(param) {
  return request.fetchPost('/v1/carousel/insert', param)
}

/**
 * 修改轮播图
 * @param {参数} param
 */
export function updCarousel(param) {
  return request.fetchPost('/v1/carousel/update', param)
}

/**
 * 修改轮播图
 * @param {参数} param
 */
export function delCarousel(param) {
  return request.fetchPost('/v1/carousel/delete', param)
}

